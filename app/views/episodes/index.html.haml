.contents__header.with-search-field
  %h2 動画検索
  = render 'layouts/search_form', search_form: @search_form, path: episodes_path
.contents__body
  .wrapper
    %ul.pl-0
      %li
        - if @search_form.keywords.present?
          %h3 動画の検索結果
        - else
          %h3 動画一覧
        - if @search_form.keywords.present?
          = render 'layouts/paginator', resources: @episodes
        %ul.list-group
          - @episodes.each do |episode|
            = render 'episode', episode: episode
        - if @search_form.keywords.present?
          = render 'layouts/paginator', resources: @episodes
