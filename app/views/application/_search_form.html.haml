= form_with model: search_form, url: :animes, method: :get, local: true, class: 'header-search-form' do |f|
  .input-group
    .header-search-form__category
      = f.select :category, [%w(全て all), %w(作品 season), %w(動画 episode)], {}, class: 'custom-select header-search-form__category-select'
    .header-search-form__keywords.input-group-append
      = f.text_field :keywords, placeholder: 'タイトル/人物名/キャラクター名を入力', class: 'form-control header-search-form__keywords-text-field'
